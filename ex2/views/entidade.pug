extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1= titulo
      h2= nipc

    .w3-container
      br
      h3 Contratos da Entidade
      table.w3-table-all
        tr
          th ID Contrato
          th Objeto Contrato
          th Preço Contratual
          th Data de Publicação
          th Data de Celebração
          th Prazo de Execução
          th Fundamentação

        each contrato in contratos
          tr
            td= contrato._id
            td= contrato.objetoContrato
            td= contrato.precoContratual
            td= contrato.dataPublicacao
            td= contrato.dataCelebracaoContrato
            td= contrato.prazoExecucao
            td= contrato.fundamentacao

      br
      h3 Total do Somatório dos Preços Contratuais: #{somatorio}

    footer.w3-container.w3-blue
      address Gerado por EngWeb2024 em #{data}
      a.w3-button.w3-blue(href='javascript:history.back()') Voltar
